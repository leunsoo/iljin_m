<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:iljin_m.ViewStyles"
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid"
             x:Class="iljin_m.Views.StockSch"
             Title="재고현황">
    <ContentPage.Content>
        <Grid Margin="10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Frame Grid.Row="0" Grid.Column="0" BorderColor="#d9d9d9" Grid.ColumnSpan="2" CornerRadius="5" Padding="5,0,0,0" Margin="5,0,0,0" BackgroundColor="#FFF" >
                    <Entry x:Name="txt_itemName" TextColor="Black" Placeholder="제품명" PlaceholderColor="Gray">
                        <Entry.Effects>
                            <effects:CustomEntry/>
                        </Entry.Effects>
                    </Entry>
                </Frame>

                <Button CornerRadius="5" Grid.Row="0" Grid.Column="2" Padding="0" Text="검색" Margin="0,0,5,0" FontSize="Medium" BackgroundColor="#2196F3"/>
            </Grid>

            <Grid Grid.Row="1">
                <dg:DataGrid ItemsSource="{Binding StockList}" HeaderBordersVisible="True" SelectionEnabled="True" RowHeight="50" HeaderHeight="50"
                            HeaderBackground="White" BorderColor="Black" BackgroundColor="Transparent" Margin="5,0,5,0" HeaderTextColor="Black">
                    <x:Arguments></x:Arguments>
                    <dg:DataGrid.Columns> 
                        <dg:DataGridColumn Title="제품구분" PropertyName="itemDiv" Width="2*"></dg:DataGridColumn>
                        <dg:DataGridColumn Title="두께" PropertyName="itemDiv" Width="1*"></dg:DataGridColumn>
                        <dg:DataGridColumn Title="폭" PropertyName="itemDiv" Width="1*"></dg:DataGridColumn>
                        <dg:DataGridColumn Title="길이" PropertyName="itemDiv" Width="1*"></dg:DataGridColumn>
                        <dg:DataGridColumn Title="현재고" PropertyName="itemDiv" Width="1*"></dg:DataGridColumn>
                    </dg:DataGrid.Columns>
                    <dg:DataGrid.RowsBackgroundColorPalette>
                        <dg:PaletteCollection>
                            <Color>#F2F2F2</Color>  
                            <Color>#152525</Color>  
                        </dg:PaletteCollection>
                    </dg:DataGrid.RowsBackgroundColorPalette>
                </dg:DataGrid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>